@page "/projects/create"
@using TaskManagementWeb.Models.DTOs
@using TaskManagementWeb.Services
@inject AuthService AuthService
@inject ProjectApiService ProjectService
@inject NavigationManager Nav

<h3 class="page-title text-center mb-4">Create New Project</h3>

@if (!initialized)
{
    <div class="text-center text-muted py-5">
        <div class="spinner-border mb-2"></div>
        <p>Loading...</p>
    </div>
}
else
{
    <div class="d-flex justify-content-center">
        <div class="card p-4 w-100" style="max-width: 500px;">
            <EditForm Model="@newProjectModel" OnValidSubmit="CreateProjectAsync">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label" for="projectName">Project Name</label>
                    <InputText id="projectName"
                               class="form-control"
                               @bind-Value="newProjectModel.Name" />
                    <ValidationMessage For="@(() => newProjectModel.Name)"
                                       class="validation-message" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="projectDescription">Project Description</label>
                    <InputTextArea id="projectDescription"
                                   class="form-control"
                                   @bind-Value="newProjectModel.Description" />
                    <ValidationMessage For="@(() => newProjectModel.Description)"
                                       class="validation-message" />
                </div>

                <div class="d-grid gap-2">
                    <button id="createProjectBtn"
                            class="btn btn-primary w-100"
                            type="submit">
                        <i class="bi bi-plus-circle me-2"></i>
                        Create Project
                    </button>

                    <button id="cancelProjectBtn"
                            class="btn btn-outline-secondary py-2"
                            type="button"
                            @onclick="Cancel">
                        Cancel
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private ProjectCreateDto newProjectModel = new();
    private string createProjectError = "";
    private bool initialized = false;

    protected override async Task OnInitializedAsync()
    {
        await AuthService.InitializeAsync();

        if (!AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        newProjectModel.UserId = AuthService.UserId;

        initialized = true;
    }

    private async Task CreateProjectAsync()
    {
        createProjectError = "";

        try
        {
            var created = await ProjectService.CreateProjectAsync(newProjectModel);
            if (created != null)
            {
                Nav.NavigateTo("/projects");
            }
        }
        catch (Exception ex)
        {
            createProjectError = $"Failed to create project: {ex.Message}";
        }
    }

    private void Cancel() =>
        Nav.NavigateTo("/projects", true);
}