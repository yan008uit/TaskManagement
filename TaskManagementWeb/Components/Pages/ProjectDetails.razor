@page "/projects/{ProjectId:int}"
@using TaskManagementWeb.Models
@using TaskManagementWeb.Services
@inject ProjectService ProjectService
@inject TaskService TaskService
@inject AuthService AuthService
@inject ApiClient ApiClient
@inject NavigationManager Nav

@if (!initialized)
{
    <p class="text-muted">Loading project…</p>
}
else if (project == null)
{
    <p class="text-danger">Project not found.</p>
}
else
{
    <h3 class="page-title">@project.Name</h3>

    @if (!string.IsNullOrWhiteSpace(project.Description))
    {
        <p class="project-description text-center text-muted mb-4">@project.Description</p>
    }

    <!-- Add New Task Form -->
    <div class="my-4 d-flex justify-content-center">
        <div class="card p-4 mb-4 add-task-card" style="width: 100%; max-width: 500px;">
            <h5 class="mb-3">Add New Task</h5>

            <input class="form-control mb-3" placeholder="Task title" @bind="newTaskTitle" />
            <textarea class="form-control mb-3" placeholder="Task description" @bind="newTaskDescription"></textarea>

            <label class="form-label">Due Date</label>
            <input type="date" class="form-control mb-3" @bind="newTaskDueDate"
                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />

            <label class="form-label">Assign User</label>
            <select class="form-select mb-3" @bind="newTaskAssignedUserId">
                <option value="">-- Select user --</option>
                @foreach (var u in users)
                {
                    <option value="@u.Id">@u.Username</option>
                }
            </select>

            <button class="btn btn-primary w-100"
                    @onclick="AddTask"
                    disabled="@string.IsNullOrWhiteSpace(newTaskTitle)">
                Add Task
            </button>
        </div>
    </div>

    <!-- Tasks -->
    <div class="row m-3 g-3">
        @foreach (var group in new[] { ("To Do", todo), ("In Progress", inProgress), ("Done", done) })
        {
            <div class="col-md-4">
                <div class="card project-card h-100">
                    <div class="card-header">
                        <strong>@group.Item1 (@group.Item2.Count)</strong>
                    </div>
                    <div class="card-body">
                        @if (!group.Item2.Any())
                        {
                            <div class="text-muted">No tasks</div>
                        }
                        else
                        {
                            @foreach (var task in group.Item2)
                            {
                                <div class="card mb-3 p-3 @(task.Status == "ToDo" ? "task-todo" :
                                                                                                task.Status == "InProgress" ? "task-inprogress" : "task-done")">

                    <strong class="project-name">@task.Title</strong>
                    <p class="project-desc text-truncate">@task.Description</p>
                    <p class="mb-2 text-muted">
                        Due: @(task.DueDate.HasValue? task.DueDate.Value.ToString("yyyy-MM-dd") : "No due date")
                    </p>

                                    <!-- Assigned User -->
                                    <p><strong>Assigned User:</strong></p>
                                    <div class="mb-2 d-flex align-items-center gap-2">
                        @if (task.CreatedByUserId == AuthService.UserId)
                                        {
                                            <select class="form-select form-select-sm w-auto"
                                                    @onchange="e => {
                                                    if (int.TryParse(e.Value?.ToString(), out var userId))
                                                    {
                                                        AssignUser(task, userId);
                                                    }
                                                }">
                                              <option value="">Assign User…</option>
                                            @foreach (var u in users)
                                            {
                                                <option value="@u.Id" selected="@(task.AssignedUserId == u.Id)">
                                                    @u.Username
                                                </option>
                                            }
                                        </select>
                                    }
                                                else if (task.AssignedUserId.HasValue)
                                    {
                                        var assigned = users.FirstOrDefault(u => u.Id == task.AssignedUserId.Value);
                                        <span class="badge bg-primary">@assigned?.Username</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </div>

                                <!-- Status & Actions -->
                                <div class="d-flex gap-2 flex-wrap mt-2 align-items-center">
                                    @if (task.AssignedUserId == AuthService.UserId)
                                    {
                                        <select class="form-select form-select-sm w-auto"
                                                @onchange="e => ChangeStatus(task, e.Value?.ToString())"
                                                value="@task.Status">
                                            <option value="ToDo">To Do</option>
                                            <option value="InProgress">In Progress</option>
                                            <option value="Done">Done</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select class="form-select form-select-sm w-auto" disabled>
                                            <option>@task.Status</option>
                                        </select>
                                    }

                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenTask(task.Id)">View</button>

                                    @if (task.CreatedByUserId == AuthService.UserId)
                                    {
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTask(task)">Delete</button>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>
}

@code {
    [Parameter] public int ProjectId { get; set; }

    ProjectDto? project;
    List<TaskDto> todo = new();
    List<TaskDto> inProgress = new();
    List<TaskDto> done = new();
    bool initialized = false;

    string newTaskTitle = "";
    string newTaskDescription = "";
    DateTime newTaskDueDate = DateTime.Today.AddDays(7);
    int? newTaskAssignedUserId = null;

    private List<UserDto> users = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        await AuthService.InitializeAsync();
        if (!AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        await LoadUsers();
        await LoadProject();

        initialized = true;
        StateHasChanged();
    }

    private async Task LoadUsers()
    {
        try
        {
            users = await ApiClient.GetAsync<List<UserDto>>("User");
        }
        catch
        {
            users = new List<UserDto>();
        }
    }

    private async Task LoadProject()
    {
        project = await ProjectService.GetProjectAsync(ProjectId);
        if (project == null) return;

        var tasks = await TaskService.GetTasksByProjectAsync(ProjectId);

        todo = tasks.Where(t => t.Status == "ToDo").ToList();
        inProgress = tasks.Where(t => t.Status == "InProgress").ToList();
        done = tasks.Where(t => t.Status == "Done").ToList();
    }

    private void OpenTask(int taskId) => Nav.NavigateTo($"/tasks/{taskId}");

    private async Task AddTask()
    {
        var dto = new TaskCreateUpdateDto
        {
            ProjectId = ProjectId,
            Title = newTaskTitle,
            Description = newTaskDescription,
            Status = "ToDo",
            DueDate = newTaskDueDate,
            AssignedUserId = newTaskAssignedUserId
        };

        var created = await TaskService.CreateTaskAsync(dto);
        if (created != null)
        {
            todo.Add(created);
            newTaskTitle = "";
            newTaskDescription = "";
            newTaskDueDate = DateTime.Today.AddDays(7);
            newTaskAssignedUserId = null;
            StateHasChanged();
        }
    }

    private async Task ChangeStatus(TaskDto task, string? newStatus)
    {
        if (string.IsNullOrEmpty(newStatus) || task.Status == newStatus) return;

        // Only assigned user can change status
        if (task.AssignedUserId != AuthService.UserId) return;

        task.Status = newStatus;
        var dto = new TaskCreateUpdateDto
        {
            ProjectId = ProjectId,
            Title = task.Title,
            Description = task.Description,
            Status = task.Status,
            DueDate = task.DueDate,
            AssignedUserId = task.AssignedUserId
        };

        await TaskService.UpdateTaskAsync(task.Id, dto);
        await LoadProject();
        StateHasChanged();
    }

    private async Task DeleteTask(TaskDto task)
    {
        // Only creator can delete task
        if (task.CreatedByUserId != AuthService.UserId) return;

        await TaskService.DeleteTaskAsync(task.Id);
        await LoadProject();
        StateHasChanged();
    }

    private async Task AssignUser(TaskDto task, int userId)
    {
        // Only creator can assign user
        if (task.CreatedByUserId != AuthService.UserId) return;

        await TaskService.AssignUserAsync(task.Id, userId);
        await LoadProject();
        StateHasChanged();
    }
}