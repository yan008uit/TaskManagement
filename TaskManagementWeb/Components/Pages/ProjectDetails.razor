@page "/projects/{ProjectId:int}"
@using TaskManagementWeb.Models.DTOs
@using TaskManagementWeb.Services
@inject ProjectService ProjectService
@inject TaskService TaskService
@inject AuthService AuthService
@inject ApiClient ApiClient
@inject NavigationManager Nav

@if (!initialized)
{
    <p class="text-muted">Loading project…</p>
}
else if (project == null)
{
    <p class="text-danger">Project not found.</p>
}
else
{
    <h3 class="page-title">@project.Name</h3>

    @if (!string.IsNullOrWhiteSpace(project.Description))
    {
        <p class="project-description text-center text-muted mb-4">@project.Description</p>
    }

    <!-- Add New Task Form -->
    <div class="my-4 d-flex justify-content-center">
        <div class="card p-4 mb-4 add-task-card" style="width: 100%; max-width: 500px;">
            <h5 class="mb-3">Add New Task</h5>

            <input class="form-control mb-3" placeholder="Task title" @bind="newTaskTitle" />
            <textarea class="form-control mb-3" placeholder="Task description" @bind="newTaskDescription"></textarea>

            <label class="form-label">Due Date</label>
            <input type="date" class="form-control mb-3" @bind="newTaskDueDate"
                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />

            <label class="form-label">Assign User</label>
            <select class="form-select mb-3"
                    @bind-value="newTaskAssignedUserId"
                    @bind-value:event="onchange">
                <option value="">-- Select user --</option>
                @foreach (var u in users)
                {
                    <option value="@u.Id">@u.Username</option>
                }
            </select>

            <button class="btn btn-primary w-100"
                    @onclick="AddTask"
                    disabled="@string.IsNullOrWhiteSpace(newTaskTitle)">
                Add Task
            </button>
        </div>
    </div>

    <!-- Tasks grouped by status -->
    <div class="row m-3 g-3">
        @foreach (var group in new[] { ("To Do", todo), ("In Progress", inProgress), ("Done", done) })
        {
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">
                        <strong>@group.Item1 (@group.Item2.Count)</strong>
                    </div>
                    <div class="card-body">
                        @if (!group.Item2.Any())
                        {
                            <div class="text-muted">No tasks</div>
                        }
                        else
                        {
                            @foreach (var task in group.Item2)
                            {
                                <TaskCard Task="task"
                                          Users="users"
                                          AuthService="AuthService"
                                          OnStatusChanged="UpdateTaskStatus"
                                          OnUserAssigned="AssignTaskUser"
                                          OnDeleteTask="DeleteTask"
                                          OnViewTask="OpenTask" />
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter] public int ProjectId { get; set; }

    private ProjectDto? project;
    private List<TaskDto> todo = new();
    private List<TaskDto> inProgress = new();
    private List<TaskDto> done = new();
    private bool initialized = false;

    private string newTaskTitle = "";
    private string newTaskDescription = "";
    private DateTime newTaskDueDate = DateTime.Today.AddDays(7);
    private int? newTaskAssignedUserId = null;

    private List<UserDto> users = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        await AuthService.InitializeAsync();
        if (!AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        users = await ProjectService.GetUsersAsync();
        await LoadProject();

        initialized = true;
        StateHasChanged();
    }

    private async Task LoadProject()
    {
        project = await ProjectService.GetProjectAsync(ProjectId);
        if (project == null) return;

        var tasks = await TaskService.GetTasksByProjectAsync(ProjectId);

        todo = tasks.Where(t => t.Status == "ToDo").ToList();
        inProgress = tasks.Where(t => t.Status == "InProgress").ToList();
        done = tasks.Where(t => t.Status == "Done").ToList();
    }

    private void OpenTask(TaskDto task) => Nav.NavigateTo($"/tasks/{task.Id}");

    private async Task AddTask()
    {
        var dto = new TaskCreateDto
        {
            ProjectId = ProjectId,
            Title = newTaskTitle,
            Description = newTaskDescription,
            Status = "ToDo",
            DueDate = newTaskDueDate,
            AssignedUserId = newTaskAssignedUserId
        };

        var created = await TaskService.CreateTaskAsync(dto);
        if (created != null)
        {
            todo.Add(created);
            newTaskTitle = "";
            newTaskDescription = "";
            newTaskDueDate = DateTime.Today.AddDays(7);
            newTaskAssignedUserId = null;
            StateHasChanged();
        }
    }

    private async Task UpdateTaskStatus((TaskDto Task, string? NewStatus) args)
    {
        var (task, newStatus) = args;
        if (string.IsNullOrEmpty(newStatus)) return;
        if (task.AssignedUserId != AuthService.UserId) return;
        if (task.Status == newStatus) return;

        var dto = new TaskUpdateDto
        {
            Title = task.Title,
            Description = task.Description,
            Status = newStatus,
            DueDate = task.DueDate,
            AssignedUserId = task.AssignedUserId
        };

        await TaskService.UpdateTaskAsync(task.Id, dto);

        RemoveTaskFromCurrentList(task);
        task.Status = newStatus;
        AddTaskToList(task);

        StateHasChanged();
    }

    private async Task AssignTaskUser((TaskDto Task, int UserId) args)
    {
        var (task, userId) = args;
        if (task.CreatedByUserId != AuthService.UserId) return;

        await TaskService.AssignUserAsync(task.Id, userId);

        task.AssignedUserId = userId;
        StateHasChanged();
    }

    private async Task DeleteTask(TaskDto task)
    {
        if (task.CreatedByUserId != AuthService.UserId && task.AssignedUserId != AuthService.UserId)
            return;

        await TaskService.DeleteTaskAsync(task.Id);

        RemoveTaskFromCurrentList(task);
        StateHasChanged();
    }

    private void RemoveTaskFromCurrentList(TaskDto task)
    {
        todo.Remove(task);
        inProgress.Remove(task);
        done.Remove(task);
    }

    private void AddTaskToList(TaskDto task)
    {
        if (task.Status == null) return;

        switch (task.Status)
        {
            case "ToDo":
                todo.Add(task);
                break;
            case "InProgress":
                inProgress.Add(task);
                break;
            case "Done":
                done.Add(task);
                break;
        }
    }
}