@page "/projects"
@using TaskManagementWeb.Models.DTOs
@using TaskManagementWeb.Services
@inject AuthService AuthService
@inject ProjectService ProjectService
@inject TaskService TaskService
@inject NavigationManager Nav

    @if (!initialized)
    {
        <p class="text-muted text-center mt-5">Loading...</p>
    }
    else if (!AuthService.IsAuthenticated)
    {
        <p class="text-warning text-center mt-5">Redirecting to login...</p>
    }
    else if (isLoading)
    {
        <p class="text-muted text-center mt-5">Loading projects...</p>
    }
    else
    {
        <h3 class="page-title mb-4">Dashboard</h3>

        <!-- My Tasks -->
        <div class="my-tasks-container mb-5">
            <h3 class="page-title">My Tasks</h3>
            @if (myTasks.Count == 0)
            {
                <p class="text-center text-muted">You have no tasks assigned.</p>
            }
            else
            {
                <div class="row g-4 m-3">
                    @foreach (var task in myTasks)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="card task-card p-3 h-100">
                                <strong class="task-title">@task.Title</strong>
                                <p class="text-truncate task-desc">@task.Description</p>
                                <p class="text-muted mb-1">Status: @FormatStatus(task.Status)</p>
                                <p class="text-muted mb-1">Project: <span class="project-name">@projects.FirstOrDefault(p => p.Id == task.ProjectId)?.Name</span></p>
                                <p class="text-muted mb-0">Due: @(task.DueDate?.ToString("yyyy-MM-dd") ?? "No due date")</p>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Projects -->
        <div class="projects-container mb-2">
            <h3 class="page-title">Projects</h3>

            @if (projects.Count == 0)
            {
                <p class="text-center text-muted">No projects available.</p>
            }
            else
            {
                <div class="row g-4 m-2">
                    <!-- Create Project Card -->
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="card create-project-card p-3 h-100 d-flex align-items-center justify-content-center"
                             @onclick="GoToCreateProject">
                            <h5 class="text-primary">+ Create New Project</h5>
                        </div>
                    </div>

                    @foreach (var p in projects)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="card project-card p-3 h-100" style="cursor:pointer;" @onclick="() => OpenProject(p.Id)">
                                <h5 class="project-name">@p.Name</h5>
                                <p class="project-desc text-muted">@p.Description</p>

                                <div class="task-summary mb-3">
                                    <span class="badge badge-total">Total: @(taskCounts.ContainsKey(p.Id) ? taskCounts[p.Id].Total : 0)</span>
                                    <span class="badge badge-todo">To Do: @(taskCounts.ContainsKey(p.Id) ? taskCounts[p.Id].ToDo : 0)</span>
                                    <span class="badge badge-inprogress">In Progress: @(taskCounts.ContainsKey(p.Id) ? taskCounts[p.Id].InProgress : 0)</span>
                                    <span class="badge badge-done">Done: @(taskCounts.ContainsKey(p.Id) ? taskCounts[p.Id].Done : 0)</span>
                                </div>

                                @if (p.UserId == AuthService.UserId)
                                {
                                    <button class="btn btn-sm btn-outline-danger mt-auto"
                                            @onclick="() => DeleteProject(p.Id)"
                                            @onclick:stopPropagation>
                                        Delete
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }

@code {
    private bool initialized = false;
    private bool isLoading = false;
    private List<ProjectDto> projects = new();
    private Dictionary<int, (int Total, int ToDo, int InProgress, int Done)> taskCounts = new();
    private List<TaskDto> myTasks = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        await AuthService.InitializeAsync();
        if (!AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        await LoadProjectsAsync();
    }

    private async Task LoadProjectsAsync()
    {
        isLoading = true;
        try
        {
            projects = await ProjectService.GetVisibleProjectsAsync();
            taskCounts.Clear();
            myTasks.Clear();

            foreach (var p in projects)
            {
                var tasks = p.Tasks ?? new List<TaskSummaryDto>();
                taskCounts[p.Id] = (
                    Total: tasks.Count,
                    ToDo: tasks.Count(t => t.Status == "ToDo"),
                    InProgress: tasks.Count(t => t.Status == "InProgress"),
                    Done: tasks.Count(t => t.Status == "Done")
                );

                myTasks.AddRange(tasks
                    .Where(t => t.AssignedUserId == AuthService.UserId)
                    .Select(t => new TaskDto
                    {
                        Id = t.Id,
                        Title = t.Title,
                        Status = t.Status,
                        CreatedByUserId = t.CreatedByUserId,
                        AssignedUserId = t.AssignedUserId,
                        DueDate = t.DueDate,
                        ProjectId = p.Id
                    }));
            }
        }
        finally
        {
            isLoading = false;
            initialized = true;
            StateHasChanged();
        }
    }

    private void OpenProject(int projectId) => Nav.NavigateTo($"/projects/{projectId}");
    private async Task DeleteProject(int projectId)
    {
        if (await ProjectService.DeleteProjectAsync(projectId))
        {
            projects.RemoveAll(p => p.Id == projectId);
            taskCounts.Remove(projectId);
            StateHasChanged();
        }
    }
    private string FormatStatus(string? status) => status switch
    {
        "ToDo" => "To do",
        "InProgress" => "In progress",
        "Done" => "Done",
        _ => "Unknown"
    };
    private void GoToCreateProject() => Nav.NavigateTo("/createproject");
}