@page "/projects"
@using TaskManagementWeb.Models
@using TaskManagementWeb.Services
@inject AuthService AuthService
@inject ProjectService ProjectService
@inject TaskService TaskService
@inject NavigationManager Nav

<h3 class="page-title">Dashboard</h3>

@if (!initialized)
{
    <p class="text-muted">Loading...</p>
}
else if (!AuthService.IsAuthenticated)
{
    <p class="text-warning">Redirecting to login...</p>
}
else if (isLoading)
{
    <p class="text-muted">Loading projects...</p>
}
else if (projects.Count == 0)
{
    <p class="text-muted">No projects found.</p>
}
else
{
    <div class="container">
        <div class="row g-4">
            @foreach (var p in projects)
            {
                <div class="col-md-4">
                    <div class="card project-card m-2 p-3">
                        <h5 class="project-name">@p.Name</h5>
                        <p class="project-desc text-muted">@p.Description</p>

                        <div class="task-summary mb-3">
                            <span class="badge badge-status badge-total">Total: @taskCounts[p.Id].Total</span>
                            <span class="badge badge-status badge-todo">To Do: @taskCounts[p.Id].ToDo</span>
                            <span class="badge badge-status badge-inprogress">In Progress: @taskCounts[p.Id].InProgress</span>
                            <span class="badge badge-status badge-done">Done: @taskCounts[p.Id].Done</span>
                        </div>

                        <button class="btn btn-primary w-100" @onclick="() => OpenProject(p.Id)">
                            Open Project
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    private bool initialized = false;
    private bool isLoading = false;

    private List<ProjectDto> projects = new();
    private Dictionary<int, (int Total, int ToDo, int InProgress, int Done)> taskCounts = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        await AuthService.InitializeAsync();
        initialized = true;

        if (!AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            projects = await ProjectService.GetProjectsAsync();
            taskCounts.Clear();

            foreach (var p in projects)
            {
                var tasks = await TaskService.GetTasksByProjectAsync(p.Id);
                taskCounts[p.Id] = (
                    Total: tasks.Count,
                    ToDo: tasks.Count(t => t.Status == "ToDo"),
                    InProgress: tasks.Count(t => t.Status == "InProgress"),
                    Done: tasks.Count(t => t.Status == "Done")
                );
            }
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OpenProject(int projectId)
    {
        Nav.NavigateTo($"/projects/{projectId}");
    }
}