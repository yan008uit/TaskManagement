@page "/projects"
@using TaskManagementWeb.Models
@using TaskManagementWeb.Services
@inject AuthService AuthService
@inject ProjectService ProjectService
@inject TaskService TaskService
@inject NavigationManager Nav

<h3>My Projects</h3>

@if (!initialized)
{
    <p>Loading...</p>
}
else if (!AuthService.IsAuthenticated)
{
    <p>Redirecting to login...</p>
}
else if (isLoading)
{
    <p>Loading projects...</p>
}
else if (projects.Count == 0)
{
    <p>No projects found.</p>
}
else
{
    <div class="row g-4">
        @foreach (var p in projects)
        {
            <div class="col-md-4">
                <div class="card p-3">
                    <h5>@p.Name</h5>
                    <p class="text-muted">@p.Description</p>

                    <p class="mb-1">
                        <strong>Total Tasks:</strong> @taskCounts[p.Id].Total
                    </p>
                    <p class="mb-1">
                        To Do: @taskCounts[p.Id].ToDo
                    </p>
                    <p class="mb-1">
                        In Progress: @taskCounts[p.Id].InProgress
                    </p>
                    <p>
                        Done: @taskCounts[p.Id].Done
                    </p>

                    <button class="btn btn-primary" @onclick="() => OpenProject(p.Id)">
                        Open Project
                    </button>
                </div>
            </div>
        }
    </div>
}

@code {
    private bool initialized = false;
    private bool isLoading = true;

    private List<ProjectDto> projects = new();
    private Dictionary<int, (int Total, int ToDo, int InProgress, int Done)> taskCounts
        = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        await AuthService.InitializeAsync();
        initialized = true;

        if (!AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        try
        {
            isLoading = true;

            projects = await ProjectService.GetProjectsAsync();

            foreach (var p in projects)
            {
                var tasks = await TaskService.GetTasksByProjectAsync(p.Id);

                taskCounts[p.Id] = (
                    Total: tasks.Count,
                    ToDo: tasks.Count(t => t.Status == "ToDo"),
                    InProgress: tasks.Count(t => t.Status == "InProgress"),
                    Done: tasks.Count(t => t.Status == "Done")
                );
            }
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OpenProject(int projectId)
    {
        Nav.NavigateTo($"/projects/{projectId}");
    }
}