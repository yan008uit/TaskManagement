@page "/tasks/{TaskId:int}"
@using TaskManagementWeb.Models.DTOs
@using TaskManagementWeb.Services
@inject TaskService TaskService
@inject CommentService CommentService
@inject AuthService AuthService
@inject NavigationManager Nav

@if (!initialized)
{
    <p class="text-muted">Loading task…</p>
}
else if (task == null)
{
    <p class="text-danger">Task not found.</p>
}
else
{
    <h3 class="page-title">@task.Title</h3>

    @if (!string.IsNullOrWhiteSpace(task.Description))
    {
        <p class="project-description text-center text-muted mb-4">
            @task.Description
        </p>
    }

    <div class="card task-details-card">
        <p>
            <strong>Status:</strong>
            <span class="badge @GetStatusClass(task.Status)">
                @task.Status
            </span>
        </p>

        <h5 class="mt-4">Comments (@comments.Count)</h5>

        @if (!comments.Any())
        {
            <div class="text-center text-muted my-3">
                <i class="bi bi-chat-dots" style="font-size:1.5rem;"></i>
                <p class="mb-0">No comments yet</p>
            </div>
        }
        else
        {
            <ul class="list-group comments-section mb-3">
                @foreach (var c in comments)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div>
                            <strong>@c.Username</strong>
                            <small class="text-muted">@c.CreatedDate.ToString("g")</small>
                            <p>@c.Text</p>
                        </div>
                        @if (c.UserId == AuthService.UserId)
                        {
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteComment(c.Id)">Delete</button>
                        }
                    </li>
                }
            </ul>
        }

        <div class="add-comment d-flex gap-2">
            <input type="text" class="form-control" placeholder="Add comment..." @bind="newCommentText" />
            <button class="btn btn-primary" @onclick="AddComment">Add Comment</button>
        </div>
    </div>
}

@code {
    [Parameter] public int TaskId { get; set; }

    private TaskDto? task;
    private List<CommentDto> comments = new();
    private string newCommentText = "";
    private bool initialized = false;

    protected override async Task OnInitializedAsync()
    {
        await AuthService.InitializeAsync();

        if (!AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/login", true);
            return;
        }

        await LoadTaskAsync();
        initialized = true;
    }

    private async Task LoadTaskAsync()
    {
        try
        {
            task = await TaskService.GetTaskAsync(TaskId);
            if (task != null)
            {
                comments = await CommentService.GetCommentsByTaskAsync(TaskId);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading task: {ex.Message}");
            task = null;
        }
    }

    private async Task AddComment()
    {
        var text = newCommentText?.Trim();
        if (string.IsNullOrEmpty(text)) return;

        var dto = new CommentCreateUpdateDto
        {
            TaskItemId = TaskId,
            Text = text
        };

        try
        {
            var comment = await CommentService.AddCommentAsync(dto);
            if (comment != null)
            {
                comments.Add(comment);
                newCommentText = "";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to add comment: {ex.Message}");
        }
    }

    private async Task DeleteComment(int commentId)
    {
        try
        {
            var ok = await CommentService.DeleteCommentAsync(commentId);
            if (ok)
            {
                comments.RemoveAll(c => c.Id == commentId);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to delete comment: {ex.Message}");
        }
    }

    private string GetStatusClass(string? status)
    {
        return status switch
        {
            "ToDo" => "badge-todo",
            "InProgress" => "badge-inprogress",
            "Done" => "badge-done",
            _ => "badge-secondary"
        };
    }

}